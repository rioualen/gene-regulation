# Set parameters
if not "qsub" in config.keys():
    sys.exit("The parameter qsub must be defined in the config file")

# Rule
rule bam_to_bed:
    """Converts bam files into bed files.

    Required parameters:
        config["qsub"]

    Copyright Claire Rioualen
    """
    input: "{reads}.bam"
    output: "{reads}.bed"
    params:
        qsub = config["qsub"]\
            + " -e {reads}_bam_to_bed_qsub.err"\
            + " -o {reads}_bam_to_bed_qsub.out"
    log: "{reads}_bam_to_bed.log"
    benchmark: "{reads}_bam_to_bed_benchmark.json"
    shell:"bedtools bamtobed -i {input} > {output} 2> {log}"
