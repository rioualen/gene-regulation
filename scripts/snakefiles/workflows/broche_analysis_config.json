{
    "__description__": "Parameters for the analysis of Beatrice Roche data.",
    "__author__": "Jacques van Helden",
    "data_source": "TGML platform, samples from Beatrice Roche",
    "qsub": "-V -m a -d /Users/jvanheld/BeatriceRoche/",
    "verbosity": "0",

    "genome": {
	"organism": "Escherichia_coli_str_k_12_substr_mg1655",
        "genome_version": "Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27",
        "base_url_fasta": "ftp://ftp.ensemblgenomes.org/pub/bacteria/release-27/fasta/bacteria_0_collection/escherichia_coli_str_k_12_substr_mg1655/dna/",
        "sequence": "Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27.dna.genome",
        "sequence_top": "Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27.dna.toplevel",
        "base_url_gtf": "ftp://ftp.ensemblgenomes.org/pub/bacteria/release-27/gtf/bacteria_0_collection/escherichia_coli_str_k_12_substr_mg1655/",
        "features_gtf": "Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27",
        "base_url_gff3": "ftp://ftp.ensemblgenomes.org/pub/bacteria/release-27/gff3/escherichia_coli_str_k_12_substr_mg1655/",
        "features_gff3": "Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27"   
    },

    "files": {
	"snakefile": "scripts/snakefiles/workflows/broche_analysis.py",
	"samples": "data/broche_samples.tab",
	"analyses": "data/broche_analyses.tab"
    },

    "rsat": {
	"verbosity": "1"
    },

    "dir": {
	"base": "/Users/jvanheld/BeatriceRoche",
	"fg-chip-seq": "/Users/jvanheld/fg-chip-seq",
	"python_lib": "/Users/jvanheld/fg-chip-seq/scripts/snakefiles/python_lib/",
	"rules": "/Users/jvanheld/fg-chip-seq/scripts/snakefiles/rules/",
	"reads_source": "data/reads_ori",
	"results": "results",
	"DEG": "results/DEG",
	"reads": "results/reads",
        "reports": "reports",
        "genome": "genome"
    },

    "reports": {
	"dag": "reports/dag",
	"rulegraph": "reports/rulegraph"
    },
    
    "suffix": {
	"reads_fwd": "_R1_001",
	"reads_rev": "_R2_001"
    },

    "fastqc": {
        "other_options": ""
    },

    "sickle": { 
        "qual_type": "sanger",
        "threshold": "20",
        "other_options": ""
    },

    "bowtie": {
	"genome_dir": "genome",
        "reference_genome": "genome/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27.dna.genome.fa",
        "annotations":"genome/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27.gtf",
        "bowtie_index": "genome/Escherichia_coli_str_k_12_substr_mg1655",
        "max_mismatches": "2",
        "reads_iso": "1"
    },

    "bowtie2": {
        "index": "genome/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27",
        "max_mismatches": "1",
        "other_options": ""
    },


    "samtools": {
        "sort_by_name": ""    
    },
    
    "htseq": {
        "ht_type": "bam",
        "order": "name",
        "stranded": "no",
        "minaqual": "10",
        "id_attr": "gene_id",
        "mode": "intersection-nonempty",
        "gff_file": "genome/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27.gtf",
        "other_options": ""
    },

    "subread": {
        "basename": "reference_index",
        "gtf_attrtype": "gene_id",
	"feature_type": "transcript",
	"paired_ends": "TRUE",
	"multi_overlaps": "TRUE", 
        "reference_genome": "genome/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27.dna.genome.fa",
        "annotations":"genome/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27/Escherichia_coli_str_k_12_substr_mg1655.GCA_000005845.2.27.gtf"
    },

    "Diff_Exp": {
        "conditions": ["wt", "isw", "im", "cyay", "souche1", "souche2", "souche3"],
        "cond1": ["iscU"],
        "cond2": ["wt"]
    },

    "edgeR": {
        "script_R_path": "scripts/R-scripts/run_edgeR.R",
        "FDR_threshold": ".05",
        "Evalue_threshold": "1",
        "suffix": "_edgeR"
    },

    "DESeq2": {
        "script_R_path": "scripts/R-scripts/run_deseq2.R",
        "suffix": "_DESeq2"
    }

}
