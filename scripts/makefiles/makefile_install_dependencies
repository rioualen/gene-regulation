FASTQC_VER=0.11.5

BOWTIE1_VER=1.1.1
BOWTIE2_VER=2.2.6
BWA_VER=0.7.10

NUMPY_VER=1.9.2
SCIPY_VER=0.16.0

MACS_VER=1.4.2


