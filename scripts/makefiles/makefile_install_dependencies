macs1_install:
	@wget --no-clobber https://github.com/downloads/taoliu/MACS/MACS-$(MACS_VER)-1.tar.gz
	@tar xvfz MACS-$(MACS_VER)-1.tar.gz 
	@cd MACS-$(MACS_VER); python setup.py install
	@rm -Rf MACS-$(MACS_VER)*

